{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./shared"],
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/helpers": ["./src/helpers"],
      "@/lcu": ["./src/lcu"],
      "@/globals": ["./src/globals"],
      "@/shared": ["../shared"]
    }
  },
  "include": ["src/**/*", "src/**/*.json", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
