{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2019"],
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@helpers": ["helpers"],
      "@lcu": ["lcu"],
      "@assets": ["assets"],
      "@globals": ["globals"],
      "@styles": ["styles"]
    }
  },
  "include": ["**/*", "src/LCU/lcucontext.ts"]
}
